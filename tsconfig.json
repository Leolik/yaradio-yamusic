{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": false,
    "experimentalDecorators": true,
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "checkJs": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}