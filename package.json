{
    "name": "yaradio-yamusic",
    "productName": "Yandex.Music.App",
    "version": "0.3.7",
    "description": "Yandex Radio and Yandex Music desktop application, two in one :)",
    "main": "index.js",
    "scripts": {
        "copy-media": "copyfiles \"media/**/*\" build/",
        "copy-css": "copyfiles -u 1 \"src/**/*.css\" build/",
        "copy-package": "copyfiles \"*.json\" build/",
        "package": "npm run copy-css && npm run copy-media && npm run copy-package && (cd build && npm install --production && cd ../)",
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "start": "npm run build && npm run package && electron ./build/index.js",
        "s:dev": "set NODE_ENV=dev && npm run start",
        "package:all": "npm run package:win && npm run package:linux && npm run package:mac",
        "package:win": "npm run package && electron-packager build/ --platform=win32 --arch=all --icon=build/media/icon/yaradio_64x64.ico --name=yaMusic --executableName=yaMusic --out=distr/win --overwrite=true",
        "package:linux": "npm run package && electron-packager build/ --platform=linux --arch=all --icon=build/media/icon/yaradio_64x64.ico --name=yaMusic --executableName=yaMusic --out=distr/linux --overwrite=true",
        "package:mac": "npm run package && electron-packager build/ --platform=darwin,mas --arch=x64 --icon=build/media/icon/yaradio_64x64.icns --name=yaMusic --executableName=yaMusic --out=distr/mac --overwrite=true --app-bundle-id=info.anodsplace.yamusic --app-category-type=public.app-category.music",
        "gen:changelog": "github_changelog_generator -u dedpnd -p yaradio-yamusic"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dedpnd/yaradio-yamusic.git"
    },
    "author": "dedpnd",
    "license": "MIT",
    "keyword": [
        "electron",
        "electron.app",
        "electronapp",
        "yandex music app",
        "yandex.music.app",
        "yandex radio app",
        "yandex.radio.app",
        "electron music player"
    ],
    "bugs": {
        "url": "https://github.com/dedpnd/yaradio-yamusic/issues"
    },
    "homepage": "https://github.com/dedpnd/yaradio-yamusic#readme",
    "dependencies": {
        "electron-context-menu": "^0.15.0",
        "electron-store": "^5.1.0",
        "mz": "^2.7.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.5"
    },
    "devDependencies": {
        "@types/jquery": "^3.3.31",
        "@types/mz": "0.0.32",
        "@types/node-notifier": "^5.4.0",
        "@types/request-promise": "^4.1.44",
        "copyfiles": "^2.1.1",
        "cross-var": "^1.1.0",
        "electron": "^7.1.1",
        "electron-packager": "^14.0.6",
        "tslint": "^5.20.0",
        "typescript": "^3.7.0"
    }
}
